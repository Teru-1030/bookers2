 <%= flash[:notice] %>
</div>

 <div class="containar">
  <div class="row">
   <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <%= link_to edit_user_path(@user.id) do %>
         <button type="button" class="btn btn-outline-secondary">
           <i class="fa-solid fa-user-gear"></i>
         </button>
        <% end %>


         <h2>New Book</h2>

         <%= form_with model: Book.new do |f| %>
           <h4>Title</h4>
           <%= f.text_field :title %>

           <h4>Opinion</h4>
           <%= f.text_area :body %>
           <%= f.submit %>

         <% end %>

