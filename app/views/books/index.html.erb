<div class="containar">
  <div class="row">
   <div class="col-md-3">
    <%= render 'list' %>
   </div>
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
       <table>
         <thead>
           <tr>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
          <tbody>
         <% @books.each do |book| %>
           <tr>
             <td><%= image_tag book.user.get_profile_image(100,100) %></td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
         <% end %>
         </tbody>
       </table>
    </div>

  </div>
</div>