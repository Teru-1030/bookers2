<div class="containar">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <%= link_to(edit_user_path(current_user.id)) do %>

        <i class="fa-solid fa-user-gear"></i>

        <% end %>


         <h2>New Book</h2>

         <%= form_with model: Book.new do |f| %>
           <h4>Title</h4>
           <%= f.text_field :title %>

           <h4>Opinion</h4>
           <%= f.text_area :body %>

           <%= f.submit %>

         <% end %>
　　</div>
    <div class="col-md-8 offset-md-1">

      <h2>Books</h2>
       <table>
         <thead>
           <tr>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
          <tbody>
         <% @books.each do |book| %>

           <tr>
             <td><%= image_tag book.user.get_profile_image(100,100) %></td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
         <% end %>
         </tbody>
       </table>
    </div>

  </div>
</div>