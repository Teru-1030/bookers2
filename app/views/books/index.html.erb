<div class="containar">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @current_user_name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user_introduction %></th>
          </tr>
        </tbody>
      </table>
       <%= link_to(edit_user_path(@user.id)) do %>
        <button type="button" class="btn btn-outline-secondary">
         <i class="fa-solid fa-user-gear"></i></button>
       <% end %>
    </div>
  </div>
</div>