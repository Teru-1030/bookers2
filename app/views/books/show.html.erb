<div class="containar">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
      <table>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <%= link_to(edit_user_path(@current_user)) do %>
        <button type="button" class="btn btn-outline-secondary">
        <i class="fa-solid fa-user-gear"></i>
        </button>
        <% end %>


         <h2>New Book</h2>

         <%= form_with model: Book.new do |f| %>
           <h4>Title</h4>
           <%= f.text_field :title %>

           <h4>Opinion</h4>
           <%= f.text_area :body %>

           <%= link_to(book_path(@current_user.id)) do %>
           <button type="button" class="btn btn-success btn-lg">Create Book</button>
           <% end %>

         <% end %>

     <div class="col-md-8 offset-md-1">

      <h2>Bookes</h2>
       <table>
         <thead>
           <tr>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
         <%= @books.each do |book| %>
         <tbody>
           <tr>
             <td><%= image_tag book.user.get_profile_image(100,100) %>></td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
         <% end %>
         </tbody>
       </table>
     </div>

  </div>
</div>