<div>
 <%= flash[:notice] %>
</div>

    <%= render 'list' %>
   </div>
    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
       <table>
          <tbody>

           <tr>
             <td>
               <%= link_to user_path(@user) do %>
                 <%= image_tag @book_params.user.get_profile_image(100,100) %>
                 <div>
                 <%= current_user.name %>
                 </div>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(@book_params.id) do %>
                 <%= @book_params.title %>
               <% end %>
             </td>
             <td><%= @book_params.body %></td>
             <td>
               <% if @book_params.user == current_user %>
                 <%=link_to "Edit", edit_book_path(@book_params) %>
               <% end %>
             </td>
             <td>
               <% if @book_params.user == current_user %>
                 <%= link_to "Destroy", book_path(@book_params), method: :delete %>
               <% end %>
              </td>
           </tr>
         </tbody>
       </table>
     </div>

  </div>
</div>