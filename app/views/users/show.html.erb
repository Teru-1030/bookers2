<div>
 <%= flash[:notice] %>
</div>

     <%= render 'books/list' %>
     </div>
     <div class="col-md-8 offset-md-1">

      <h2>Bookes</h2>
       <table>
         <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
         </thead>
         <% @books.each do |book| %>
         <tbody>
           <tr>
             <td><%= image_tag book.user.get_profile_image(100,100) %></td>
             <td><%= book.title %></td>
             <td><%= book.body %></td>
           </tr>
         <% end %>
         </tbody>
       </table>
     </div>

  </div>
</div>